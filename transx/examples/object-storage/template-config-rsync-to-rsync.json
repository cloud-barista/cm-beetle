{
  "source": {
    "endpoint": "USERNAME@SOURCE_SERVER_IP_OR_HOSTNAME",
    "dataPath": "/var/backups/database/"
  },
  "destination": {
    "endpoint": "USERNAME@DESTINATION_SERVER_IP_OR_HOSTNAME",
    "dataPath": "/mnt/backup/database/"
  },
  "sourceTransferOptions": {
    "method": "rsync",
    "rsyncOptions": {
      "sshKeyPath": "~/.ssh/id_rsa",
      "sshPort": 22,
      "timeout": 300,
      "maxRetries": 3,
      "verbose": false,
      "archive": true,
      "compress": true,
      "deleteAfterTransfer": false,
      "additionalOptions": [
        "--exclude=*.tmp",
        "--exclude=*.log"
      ]
    }
  },
  "destinationTransferOptions": {
    "method": "rsync",
    "rsyncOptions": {
      "sshKeyPath": "~/.ssh/id_rsa",
      "sshPort": 22,
      "timeout": 300,
      "maxRetries": 3,
      "verbose": false,
      "archive": true,
      "compress": true,
      "additionalOptions": []
    }
  }
}